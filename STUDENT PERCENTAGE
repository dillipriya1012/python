class student:
    def __init__(self):
        self.s1=int(input("enter mark 1:"))
        self.s2=int(input("enter mark 2:"))
        self.s3=int(input("enter mark 3:"))
    def display(self):
        print((self.s1+self.s2+self.s3)//3)
l=[]
n=int(input("enter num of students"))
for i in range(n):
    x=student()
    l.append(x)
for i in range(n):
    l[i].display()
